<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.rocking_the_diasies.RockingTheDiasiesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="616dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rockingTheDaisiesImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:src="@drawable/rocking_daisies" />

            <TextView
                android:id="@+id/rockDaisiesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/rock_daisies_text"
                android:textColor="@color/white"
                android:textSize="@dimen/headerTextSize" />
            <ImageView
                android:id="@+id/daisiesImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:src="@drawable/rock_daisies_image1" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/contactUsBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:background="transparent"
        android:text="@string/contact_us_text"
        android:textAllCaps="false"
        app:iconTint="@color/white"></Button>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/bottom_nav_menu"/>

</LinearLayout>