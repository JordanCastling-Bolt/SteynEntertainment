<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".ui.forgotPassword.ForgotPasswordActivity"
    android:theme="@style/Theme.SteynEntertainment">

    <TextView
        android:id="@+id/login_"
        android:layout_width="385dp"
        android:layout_height="350dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/black_v"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/resetPassword"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:layout_gravity="start"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/black"
        android:enabled="false"
        android:text="@string/reset_password"
        app:layout_constraintBottom_toBottomOf="@+id/login_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="65dp"

        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/retypeEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/retypeEmail"
        android:layout_width="350dp"
        android:layout_height="65dp"

        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:hint="@string/retypeEmailAddress"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/login_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="203dp"
        android:layout_height="216dp"
        android:background="@drawable/rounded_border"
        app:layout_constraintBottom_toTopOf="@+id/login_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"
        app:srcCompat="@drawable/steynent_212x300" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_border"
        app:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toTopOf="@+id/login_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202"
        app:maxImageSize="40dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>