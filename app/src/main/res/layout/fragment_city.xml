<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".CityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="619dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inTheCityImage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:src="@drawable/in_the_city" />


            <TextView
                android:id="@+id/cityText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_text"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/newsMoreTextSize" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/cityText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/city_text2"
                android:textColor="@color/white"
                android:textSize="@dimen/headerTextSize" />

            <TextView
                android:id="@+id/cityText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_text3"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/cityText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@color/white"
                android:text="@string/city_text4"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/contactUsBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:text="@string/contact_us_text">
    </Button>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/bottom_nav_menu"/>

</LinearLayout>