<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.register.RegisterActivity"
    android:theme="@style/Theme.SteynEntertainment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.ui.login.LoginActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="57dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:theme="@style/Theme.SteynEntertainment"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:fabSize="auto"
            app:layout_constraintBottom_toTopOf="@+id/login_1"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="40dp" />

        <TextView
            android:id="@+id/login_1"
            android:layout_width="374dp"
            android:layout_height="453dp"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/black_v"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.039" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="350dp"
            android:layout_height="65dp"

            android:layout_marginTop="48dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toTopOf="@+id/login_1"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/txtFirstName"
            android:layout_width="350dp"
            android:layout_height="65dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/first_name"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="350dp"
            android:layout_height="65dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/last_name"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/txtFirstName"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.378"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/txtLastName" />

        <EditText
            android:id="@+id/retypePassword"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/retype_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/txtLastName" />

        <Button
            android:id="@+id/login"
            android:layout_width="125dp"
            android:layout_height="57dp"
            android:layout_gravity="start"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/black"
            android:enabled="false"
            android:text="@string/action_sign_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/retypePassword"
            app:layout_constraintVertical_bias="0.168" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/google_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/google_login"
            android:theme="@style/Theme.SteynEntertainment"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:layout_constraintEnd_toStartOf="@+id/facebook_fab"
            app:layout_constraintHorizontal_bias="0.252"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:maxImageSize="40dp"
            app:srcCompat="@drawable/ic_google_logo" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/facebook_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="84dp"
            android:contentDescription="@string/facebook_login"
            android:theme="@style/Theme.SteynEntertainment"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:layout_constraintEnd_toStartOf="@+id/twitter_fab"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:maxImageSize="40dp"
            app:srcCompat="@drawable/ic_facebook_logo" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/twitter_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="@string/twitter_login"
            android:theme="@style/Theme.SteynEntertainment"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:fabSize="auto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:maxImageSize="40dp"
            app:srcCompat="@drawable/ic_twitter_logo" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="463dp"
            android:layout_marginBottom="965dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="184dp"
            android:layout_height="178dp"
            android:layout_marginStart="127dp"
            android:layout_marginEnd="124dp"
            android:background="@drawable/rounded_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/steynent_212x300" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>