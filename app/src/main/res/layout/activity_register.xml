<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.ui.login.LoginActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="57dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:backgroundTint="@color/white"
            app:fabSize="auto"
            app:layout_constraintBottom_toTopOf="@+id/login_1"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_1"
            android:layout_width="379dp"
            android:layout_height="552dp"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/black_v"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.043" />

        <EditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="65dp"

            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toTopOf="@+id/login_1"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/username4"
            android:layout_width="350dp"
            android:layout_height="65dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/first_name"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/username"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/username5"
            android:layout_width="350dp"
            android:layout_height="65dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/last_name"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/username4"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.378"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/username5" />

        <EditText
            android:id="@+id/retypePassword"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_border"
            android:gravity="center"
            android:hint="@string/retype_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/username5" />

        <Button
            android:id="@+id/login"
            android:layout_width="125dp"
            android:layout_height="57dp"
            android:layout_gravity="start"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/black"
            android:enabled="false"
            android:text="@string/action_sign_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/login_1"
            app:layout_constraintTop_toBottomOf="@+id/retypePassword"
            app:layout_constraintVertical_bias="0.409" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="463dp"
            android:layout_marginBottom="965dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="113dp"
            android:layout_height="61dp"
            android:layout_marginEnd="252dp"
            android:text="@string/action_sign_up"
            android:textColor="@color/yellow"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintEnd_toEndOf="@+id/login_1"
            app:layout_constraintTop_toTopOf="@+id/login_1"
            app:layout_constraintVertical_bias="0.526" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="162dp"
            android:layout_height="166dp"
            android:layout_marginStart="127dp"
            android:layout_marginEnd="124dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/steynent_212x300" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>